{
    "extends": [
        "next/core-web-vitals",
        "prettier",
        "plugin:storybook/recommended"
    ],
    "plugins": ["import", "react", "jsx-a11y", "unused-imports"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": ["./tsconfig.json"],
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "import/order": [
            "error",
            {
                "alphabetize": {
                    "order": "asc"
                }
            }
        ],
        "unused-imports/no-unused-imports": "error"
    }
}
